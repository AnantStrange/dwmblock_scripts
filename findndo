#!/bin/bash
set -x
dirs=("$HOME/Downloads" "$HOME/Downloads/enter/courses" "$HOME/Downloads/media"
    "$HOME/scripts" "$HOME/.config" "$HOME/wm" "$HOME/wm/dwm" "$HOME/wm/st" "$HOME/.local/share")

for dir in "${dirs[@]}";do
    content+="$(tree -f "$dir" -L 1 -a -i -n)";
done

file=$(echo "$content" | dmenu -l 20  -p "File :")
[ -z "$file" ] && exit 0;
file_type=$(file -b "$file")

case "$file_type" in 
    *"PDF"*)
        lnch zathura "$file";
        ;;
    *"MP4"* | *"video"* | *"matroska"*)
        lnch mpv "$file";
        ;;
    *"shell"*)
        lnch st -e nvim "$file";
        ;;
    *"directory"*)
        choice=$(printf "mpv\nCopy Path\nnvim\nterminal\nthunar" | dmenu -p "Choose >");
        case "$choice" in
            "mpv")
                lnch mpv "$file";
                ;;
            "Copy Path")
                xclip "$file";
                ;;
            "nvim")
                st -e nvim "$file";
                ;;
            "terminal")
                lnch st -e cd "$file";
                ;;
            "thunar")
                lnch thunar "$file";
                ;;
            *)
                exit 0;
                ;;
        esac;;
    *)
        echo cached;
        lnch xdg-open "$file"
        ;;
esac




